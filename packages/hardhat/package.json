{
  "name": "@popcorn/hardhat",
  "version": "1.1.3",
  "main": "index",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn hardhat compile && yarn export",
    "dev": "yarn hardhat node --network hardhat --export ./lib/utils/exporter/out/hardhat-deployment.json",
    "dev-grants": "yarn hardhat node --tags beneficiary-governance,test-pop,region,rewards-manager,participation-reward,gov-staking,beneficiary-registry,beneficiary-governance-demo-data,export --network hardhat --export ./lib/utils/exporter/out/hardhat-deployment.json",
    "export": "cd lib/utils/exporter; /bin/sh export_all.sh",
    "export-foundry-deployment": "cd lib/utils/exporter; /bin/sh export_all.sh foundry hardhat",
    "export-foundry-deployment-goerli": "cd lib/utils/exporter; /bin/sh export_all.sh foundry goerli",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "clean": "rimraf ./cache & rimraf ./artifacts & rimraf ./typechain",
    "compile": "yarn clean && hardhat compile",
    "docify": "rm -rf ./docgen/.gitbook.yaml ./docgen/SUMMARY.md ./docgen/docs/* && node docgen/docify.js",
    "test": "yarn hardhat test test/*.test.ts",
    "test:fork": "yarn hardhat test test/fork/*.test.ts",
    "test:forge": "yarn hardhat forge:forge-test",
    "coverage": "yarn hardhat coverage --testfiles 'test/*.test.ts'  --solcoverjs ./.solcover.js",
    "prettify": "yarn lint-staged --allow-empty",
    "install:forge": "forge install"
  },
  "lint-staged": {
    "*.{sol,ts,tsx}": "prettier --write"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/test-helpers": "0.5.15",
    "@prb/math": "^2.5.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "8.2.3",
    "@types/node": "14.18.9",
    "hardhat-contract-sizer": "2.4.0",
    "hardhat-gas-reporter": "1.0.7",
    "openzeppelin-upgradeable": "npm:@openzeppelin/contracts-upgradeable@4.7.1",
    "openzeppelin-v3": "npm:@openzeppelin/contracts@3.4.2",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@anthonymartin/hardhat-deploy": "0.9.9",
    "@balancer-labs/v2-solidity-utils": "2.0.0",
    "@chainlink/contracts": "0.1.9",
    "@ethersproject/hardware-wallets": "5.5.0",
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@popcorn/utils": "^1.1.3",
    "@setprotocol/set-protocol-v2": "0.0.45",
    "@soptq/solidity-docgen": "0.5.17",
    "@typechain/ethers-v5": "7.2.0",
    "@typechain/hardhat": "2.3.1",
    "@uniswap/sdk": "3.0.3",
    "@uniswap/sdk-core": "3.0.1",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "@uniswap/v3-sdk": "3.8.1",
    "bluebird": "3.7.2",
    "chai": "4.3.4",
    "commander": "^9.4.1",
    "console-table-printer": "^2.11.1",
    "dotenv": "10.0.0",
    "eth-provider": "0.9.8",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.6.7",
    "hardhat": "2.12.2",
    "hardhat-secure-signer": "0.0.8",
    "merkle-tree-solidity": "1.0.8",
    "mocha": "8.4.0",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "sinon": "^14.0.0",
    "solc-0.6.0": "npm:solc@0.6.0",
    "solc-0.6.12": "npm:solc@0.6.12",
    "solc-0.8.0": "npm:solc@0.8.0",
    "solc-0.8.1": "npm:solc@0.8.1",
    "solc-0.8.10": "npm:solc@0.8.10",
